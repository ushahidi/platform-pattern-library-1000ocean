{{> ModeBar }}

{{#with (lookup deployment.posts 1)}} <!--// Choose the post index that will be the context for this tenplate //-->
<div class="mode-context">

    <header class="mode-context-header">
        {{#deployment}}
        <ol class="breadcrumbs">
            <li><a href="map.html">{{name}}</a></li>
        </ol>
        {{/deployment}}

        {{#postSurvey}}
        <h1 class="mode-context-title">{{name}}</h1>
        {{/postSurvey}}
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">
        {{#postSurvey}}
        <p>{{description}}</p>
        {{/postSurvey}}

        <button class="button-plain">
            <svg class="iconic">
                <use xlink:href="../../img/iconic-sprite.svg#plus"></use>
            </svg>
            <span class="button-label">Add to this survey</span>
        </button>
    </div>

</div>

<main role="main">

    <div class="full-col">

        <article class="postcard" role="article">
            {{postBand}}

            <div class="listing-item-select">
                {{#ifCond properties.status 'published'}}
                <span class="status-indicator empty tooltip">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                    </svg>
                    <span class="bug">This post is published</span>
                </span>
                {{/ifCond}}
                {{#ifCond properties.status 'review'}}
                <span class="status-indicator yellow tooltip">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                    </svg>
                    <span class="bug">This post is under review</span>
                </span>
                {{/ifCond}}
                {{#ifCond properties.status 'archived'}}
                <span class="status-indicator empty tooltip">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                    </svg>
                    <span class="bug">This post is archived</span>
                </span>
                {{/ifCond}}
            </div>

            <div class="postcard-body">
                <header class="postcard-header">
                    <h1 class="postcard-title">{{title}}</h1>

                    <ul class="metadata">
                        <li>
                            <a href="">
                                {{#if properties.author.avatar}}
                                    <img src="{{properties.author.avatar}}" class="avatar" />
                                {{/if}}
                                <strong>{{properties.author.name}}</strong>
                            </a>
                        </li>
                        <li class="tooltip">{{properties.date.post}} <span class="bug">2016-05-12 4:32pm</span></li>
                        <li>via {{properties.source}}</li>
                    </ul>
                </header>

                <!--// IF: User has permission to edit the post //-->
                <div class="postcard-actions">
                    <button class="button-gamma button-flat hide-until-small">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#pencil"></use>
                        </svg>
                        <span class="hidden">Edit</span>
                    </button>

                    <button class="button-gamma button-flat" data-toggle="dropdown-menu">
                        <svg class="iconic">
                            <use xlink:href="../../img/iconic-sprite.svg#ellipses"></use>
                        </svg>
                        <span class="hidden">More</span>
                    </button>
                    <div class="dropdown-menu">
                        <ul>
                            <li class="hide-when-small">
                                <a href="post-edit.html">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#pencil"></use>
                                    </svg>
                                    <span class="label">Edit</span>
                                </a>
                            </li>
                            <li>
                                <a href="" data-modal="add-to-collection">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#grid-three-up"></use>
                                    </svg>
                                    <span class="label">Add to Collection</span>
                                </a>
                            </li>
                            <li>
                                <a href="" data-modal="share">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#share"></use>
                                    </svg>
                                    <span class="label">Share</span>
                                </a>
                            </li>
                        </ul>
                        <div class="divider"></div>
                        <ul>
                            {{#ifCond properties.status 'published'}}
                            <li>
                                <a href="">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                    </svg>
                                    <span class="label">Put under review</span>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                    </svg>
                                    <span class="label">Archive</span>
                                </a>
                            </li>
                            {{/ifCond}}
                            {{#ifCond properties.status 'review'}}
                            <li>
                                <a href="">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                    </svg>
                                    <span class="label">Publish</span>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#box"></use>
                                    </svg>
                                    <span class="label">Archive</span>
                                </a>
                            </li>
                            {{/ifCond}}
                            {{#ifCond properties.status 'archived'}}
                            <li>
                                <a href="">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#globe"></use>
                                    </svg>
                                    <span class="label">Publish</span>
                                </a>
                            </li>
                            <li>
                                <a href="">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#lock-locked"></use>
                                    </svg>
                                    <span class="label">Put under review</span>
                                </a>
                            </li>
                            {{/ifCond}}
                            <li>
                                <a href="" data-modal="delete-post">
                                    <svg class="iconic">
                                        <use xlink:href="../../img/iconic-sprite.svg#trash"></use>
                                    </svg>
                                    <span class="label">Delete</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <!--// END IF: User has permission to edit the post //-->

                {{#if description}}
                <div class="postcard-field">
                    {{{description}}}
                </div>
                {{/if}}

                {{#if fields.photo}}
                <div class="postcard-field">
                    <h2 class="form-label">Photo</h2>
                    <img src="{{fields.photo}}" class="postcard-image" />
                </div>
                {{/if}}

                <div class="postcard-field">
                    <h2 class="form-label">Category</h2>
                    <p>Harrassment</p>
                </div>

                <div class="postcard-field">
                    <h2 class="form-label">Time &amp; date of encounter</h2>
                    <p>2016-03-04 12:04:00</p>
                </div>

                <div class="postcard-field">
                    <h2 class="form-label">Location</h2>
                    <p>1234 Main St. Austin, TX USA</p>
                    {{mapEmbed 1 false}}
                </div>
            </div>

        </article>

