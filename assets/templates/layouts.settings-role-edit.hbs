{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
            <li><a href="settings.html">Settings</a></li>
            <li><a href="settings-roles.html">Roles</a></li>
        </ol>

        <h1 class="mode-context-title">Edit Role</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">

    </div>
</div>

<main role="main">

    <div class="toolbar">
        <div class="button-group">
            <button type="button" class="button-flat">Cancel</button>
            <button type="button" class="button-alpha">Save</button>
        </div>
    </div>

    <div class="main-col">

        <div class="form-sheet">
            <div class="form-field title">
                <label class="hidden">Name</label>
                <input type="text" placeholder="Role name" value="Editor">
            </div>

            <div class="form-field">
                <label>Description</label>
                <textarea>Vestibulum faucibus efficitur erat. Mauris varius mollis consectetur. Ut et sem ut lacus rutrum dignissim.</textarea>
            </div>

            <fieldset>
                <legend>Permission</legend>

                <div class="form-field checkbox">
                    <label for="users">
                        <input type="checkbox" id="users">
                        Add, edit, and delete users
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="surveys">
                        <input type="checkbox" id="surveys">
                        Add, edit, and delete surveys
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="categories">
                        <input checked type="checkbox" id="categories">
                        Add, edit, and delete categories
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="sources">
                        <input type="checkbox" id="sources">
                        Add, edit, and delete data sources
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="posts-edit">
                        <input checked type="checkbox" id="posts-edit">
                        Edit posts
                    </label>
                </div>
                <div class="form-field checkbox">
                    <label for="posts-import">
                        <input checked type="checkbox" id="posts-import">
                        Import posts
                    </label>
                </div>
            </fieldset>
        </div>

        <div class="form-sheet">
            <div class="form-sheet-summary">
                <h3 class="form-sheet-title">Delete this role</h3>
                <p><strong>If you delete this role</strong>, all of the users assigned to it will be assigned default permissions. Proceed with caution.</p>

                <button class="button-destructive">
                    <svg class="iconic">
                        <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../img/iconic-sprite.svg#trash"></use>
                    </svg>
                    <span class="button-label">Delete role</span>
                </button>
            </div>
        </div>

    </div>

</main>

{{> Modals }}
