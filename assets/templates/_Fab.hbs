<div class="fab" data-message="add-post">
    <button type="button" class="button-alpha button-fab" data-toggle="fab-options">
        <svg class="iconic">
          <use xlink:href="../../img/iconic-sprite.svg#plus"></use>
        </svg>
        <span class="hidden">Add</span>
    </button>
    <ul class="fab-options" data-toggle-animate="flex">
        {{#each deployment.surveys}}
        <li>
            <a href="">
                <span class="fab-action-type" style="background-color: #{{color}};">
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#file"></use>
                    </svg>
                </span>
                <span class="bug">{{name}}</span>
            </a>
        </li>
        {{/each}}
    </ul>
</div>
