{{> ModeBar }}

<div class="mode-context">

    <header class="mode-context-header">
        <ol class="breadcrumbs">
            <li><a href="map.html">{{deployment.name}}</a></li>
            <li><a href="settings.html">Settings</a></li>
        </ol>

        <h1 class="mode-context-title">Users</h1>
    </header>

    <span class="mode-context-trigger">
        <svg class="iconic">
            <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
        </svg>
        <span class="label hidden">Show more/less</span>
    </span>

    <div class="mode-context-body">

    </div>
</div>

<main role="main">

    <div class="toolbar">
        <div class="fab">
            <button type="button" class="button-alpha button-fab">
                <svg class="iconic">
                  <use xlink:href="../../img/iconic-sprite.svg#plus"></use>
                </svg>
                <span class="hidden">Add</span>
            </button>
        </div>

        <form role="search" class="searchbar">
            <div class="searchbar-input">
                <div class="form-field">
                    <label class="hidden">Search</label>
                    <div class="input-with-icon">
                        <input type="search" placeholder="Search users">
                        <svg class="iconic">
                          <use xlink:href="../../img/iconic-sprite.svg#magnifying-glass"></use>
                        </svg>
                    </div>
                </div>
            </div>

            <div class="searchbar-options">
                <a href="#" class="button searchbar-options-filter" data-toggle="search-filters">
                    <span class="button-label">Filters</span>
                    <svg class="iconic">
                      <use xlink:href="../../img/iconic-sprite.svg#chevron-bottom"></use>
                    </svg>
                </a>
            </div>

            <div class="dropdown-menu" data-toggle-target="search-filters">
                <div class="dropdown-menu" data-toggle-target="search-filters">
                    <div class="dropdown-menu-body">
                        <fieldset>
                            <legend>Roles</legend>

                            <div class="form-field checkbox">
                                <label for="member">
                                    <input type="checkbox" name="member" checked id="member"> Member
                                </label>
                            </div>
                            <div class="form-field checkbox">
                                <label for="editor">
                                    <input type="checkbox" name="editor" checked value="Police encounters" id="editor"> Editor
                                </label>
                            </div>
                            <div class="form-field checkbox">
                                <label for="administrator">
                                    <input type="checkbox" name="administrator" checked id="administrator"> Administrator
                                </label>
                            </div>
                        </fieldset>
                    </div>

                    <div class="form-field">
                        <button type="button" class="button-link" disabled>Cancel</button>
                        <button type="button" class="button-alpha" disabled>Apply filters</button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <div class="full-col">

        <div class="listing card">
            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-primary">
                    <div class="listing-item-image">
                        <img class="avatar" src="http://placehold.it/100x100" alt="">
                    </div>

                    <h2 class="listing-item-title"><a href="">Harry Dunne</a></h2>
                    <p class="listing-item-secondary">Editor</p>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-primary">
                    <div class="listing-item-image">
                        <img class="avatar" src="http://placehold.it/100x100" alt="">
                    </div>

                    <h2 class="listing-item-title"><a href="">Mary Swanson</a></h2>
                    <p class="listing-item-secondary">Contributor</p>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-primary">
                    <div class="listing-item-image">
                        <img class="avatar" src="http://placehold.it/100x100" alt="">
                    </div>

                    <h2 class="listing-item-title"><a href="">Lloyd Christmas</a></h2>
                    <p class="listing-item-secondary">Editor</p>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-primary">
                    <div class="listing-item-image">
                        <img class="avatar" src="http://placehold.it/100x100" alt="">
                    </div>

                    <h2 class="listing-item-title"><a href="">Joe Mentalino</a></h2>
                    <p class="listing-item-secondary">Contributor</p>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-primary">
                    <div class="listing-item-image">
                        <img class="avatar" src="http://placehold.it/100x100" alt="">
                    </div>

                    <h2 class="listing-item-title"><a href="">Karl Swanson</a></h2>
                    <p class="listing-item-secondary">Administrator</p>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-select">
                    <input type="checkbox">
                </div>

                <div class="listing-item-primary">
                    <div class="listing-item-image">
                        <img class="avatar" src="http://placehold.it/100x100" alt="">
                    </div>

                    <h2 class="listing-item-title"><a href="">Nicholas Andre</a></h2>
                    <p class="listing-item-secondary">Editor</p>
                </div>
            </div>

            <div class="listing-item">
                <div class="listing-item-primary">
                    <button class="button-gamma button-flat">Load more</button>
                </div>
            </div>

            <div class="listing-toolbar">
                <div class="listing-toolbar-summary">
                    <strong><span class="total"></span> selected</strong>
                    <button class="button-link">Deselect</button>
                    <button class="button-link">Select all</button>
                </div>

                <div class="listing-toolbar-actions">
                    <fieldset class="custom-fieldset">
                        <legend>Change role to...</legend>

                        <div class="form-field radio">
                            <label for="contributor">
                                <input type="radio" name="role" id="contributor">
                                Contributor
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="editor">
                                <input type="radio" name="role" id="editor">
                                Editor
                            </label>
                        </div>

                        <div class="form-field radio">
                            <label for="admin">
                                <input type="radio" name="role" id="admin">
                                Administrator
                            </label>
                        </div>
                    </fieldset>

                    <button type="button" class="button-destructive">
                        <svg class="iconic">
                            <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="../../img/iconic-sprite.svg#trash"></use>
                        </svg>
                        <span class="button-label hidden">Delete</span>
                    </button>
                </div>
           </div>

        </div>

    </div>

</main>

{{> Modals }}
